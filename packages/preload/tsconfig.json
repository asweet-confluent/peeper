{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "target": "ESNext",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["../*"]
    }
  },
  "include": ["src/**/*.ts", "../../types/**/*.d.ts", "../main/src/Api.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
